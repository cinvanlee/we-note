{
    "name": "we-note",
    "version": "1.0.0",
    "description": "A self-use desktop boilerplate",
    "main": "./public/electron.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rmlzy/WeNote.git"
    },
    "author": "rmlzy <liuzhiyuan2018@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rmlzy/WeNote/issues"
    },
    "homepage": "https://github.com/rmlzy/WeNote#readme",
    "scripts": {
        "test": "test",
        "dev": "cross-env NODE_ENV=development concurrently \"BROWSER=none npm run web:dev\" \"wait-on http://0.0.0.0:1024 && electron .\"",
        "web:dll": "webpack --config ./configs/webpack.config.dll.js",
        "web:dev": "cross-env NODE_ENV=development webpack-dev-server --config ./configs/webpack.config.dev.js --colors",
        "web:build": "npm run web:clean && cross-env NODE_ENV=production webpack --config ./configs/webpack.config.prod.js",
        "web:clean": "rimraf build",
        "pack:mac": "npm run web:build && electron-builder --mac",
        "pack:win": "npm run web:build && electron-builder --win",
        "pack:linux": "npm run web:build && electron-builder --linux",
        "install-depts": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "com.example.electron-cra",
        "productName": "ElectronReactMobx",
        "asar": false,
        "extends": null,
        "directories": {
            "buildResources": "dist"
        },
        "mac": {
            "icon": "build/images/logo.png"
        },
        "win": {
            "icon": "build/images/logo.ico"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.6.4",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/plugin-proposal-decorators": "^7.6.0",
        "@babel/plugin-transform-runtime": "^7.6.2",
        "@babel/preset-env": "^7.6.3",
        "@babel/preset-react": "^7.6.3",
        "@babel/register": "^7.6.2",
        "@types/react": "^16.9.9",
        "@types/react-dom": "^16.9.2",
        "add-asset-html-webpack-plugin": "^3.1.3",
        "babel-loader": "^8.0.6",
        "concurrently": "^5.0.0",
        "copy-webpack-plugin": "^5.0.4",
        "cross-env": "^6.0.3",
        "css-loader": "^3.2.0",
        "electron": "^6.0.12",
        "electron-builder": "^21.2.0",
        "file-loader": "^4.2.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "less": "^3.10.3",
        "less-loader": "^5.0.0",
        "mini-css-extract-plugin": "^0.8.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "prettier": "^1.18.2",
        "rimraf": "^3.0.0",
        "style-loader": "^1.0.0",
        "url-loader": "^2.1.0",
        "wait-on": "^3.3.0",
        "webpack": "^4.39.3",
        "webpack-cleanup-plugin": "^0.5.1",
        "webpack-cli": "^3.3.7",
        "webpack-dev-server": "^3.8.0",
        "webpack-merge": "^4.2.2"
    },
    "dependencies": {
        "ace-builds": "^1.4.7",
        "antd": "^3.24.2",
        "classnames": "^2.2.6",
        "electron-is-dev": "^1.1.0",
        "electron-json-storage": "^4.1.8",
        "history": "^4.10.1",
        "jsonfile": "^5.0.0",
        "lodash": "^4.17.15",
        "mobx": "^5.14.0",
        "mobx-react": "^6.1.3",
        "moment": "^2.24.0",
        "prop-types": "^15.7.2",
        "query-string": "^6.8.3",
        "react": "^16.10.2",
        "react-ace": "^8.0.0",
        "react-codemirror2": "^6.0.0",
        "react-dom": "^16.10.2",
        "react-quill": "^1.3.3",
        "react-router-dom": "^5.1.2",
        "shelljs": "^0.8.3",
        "uuid": "^3.3.3"
    }
}
